    style.
      .profile-img {
        width: 220px;
        height: 220px;
        object-fit: cover;
        border-radius: 50%;
        border: 6px solid #fff;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        background: #f8f9fa;
      }
      .about-card {
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.06);
        padding: 2.5rem 2rem;
        margin-top: -120px;
        position: relative;
        z-index: 2;
      }
      .about-icons a {
        color: #0d6efd;
        transition: color 0.2s;
      }
      .about-icons a:hover {
        color: #6610f2;
      }
      @media (max-width: 767px) {
        .about-card {
          margin-top: -80px;
          padding: 1.5rem 1rem;
        }
        .profile-img {
          width: 140px;
          height: 140px;
        }
